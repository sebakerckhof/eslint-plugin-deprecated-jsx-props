{
  "compilerOptions": {
    "module": "Node16",
    "target": "es2022",
    "lib": ["ES2022"],
    "moduleResolution": "Node16",
    "sourceMap": false,
    "outDir": "./dist/",
    "incremental": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": true,
    "baseUrl": "./",
    "declaration": true,
    "esModuleInterop": true,
    "noEmitOnError": false,
    "skipLibCheck": true,
    "jsx": "react",
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}